{
  "name": "@business-navigator/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "type-check": "bun tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "check:file-length": "eslint . --no-eslintrc --rule 'max-lines: [error, {max: 300, skipBlankLines: true, skipComments: true}]'",
    "test": "bun test",
    "prepare": "husky"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/jwt": "^1.2.0",
    "@supabase/supabase-js": "^2.49.2",
    "elysia": "^1.2.17",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.1.15",
    "eslint": "^9.39.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
